{% extends 'base.html.twig' %}

{% block title %}Toutes les recettes de cuisine
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello
			{{ controller_name }}! âœ…</h1>


		This friendly message is coming from:
		<ul class="navbar-nav mr-auto">
			{% for recipe in recipes %}
				<li class="nav-item">
					<a class="nav-link" href="{{ path('recipe.show', { id: recipe.id, slug: recipe.slug }) }}">
						{{ recipe.title }}
					</a>
				</li>
			{% else %}
				<li class="nav-item">
					<span class="nav-link disabled">Aucune recette disponible</span>
				</li>
			{% endfor %}
		</ul>


	</div>

{% endblock %}
