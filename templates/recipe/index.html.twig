{% extends 'base.html.twig' %}

{% block title %}Toutes les recettes de cuisine
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<div class="mb-4 d-flex justify-content-end">
			<a class="btn btn-primary" href="{{ path('recipe.create') }}">Create a new recipe</a>
		</div>
		<h1>Toutes les recettes</h1>

		<table class="table table-striped">
		<thead>
			<tr>
				<th>Title</th>
				<th>Duration</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for recipe in recipes %}
				<tr>
					<td>{{ recipe.title }}</td>
					<td>{{ recipe.duration }} min</td>
					<td>
						<a class="btn btn-info btn-sm" href="{{ path('recipe.show', { id: recipe.id, slug: recipe.slug }) }}">View</a>
						<a class="btn btn-secondary btn-sm" href="{{ path('recipe.edit', { id: recipe.id }) }}">Edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">No recipes found.</td>
				</tr>
			{% endfor %}
		</table>

	</div>

{% endblock %}
